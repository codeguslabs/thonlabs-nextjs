{
  "name": "@thonlabs/nextjs",
  "description": "Integrate ThonLabs authentication into your Next.js project",
  "private": false,
  "version": "0.2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "compile": "tsc -p .",
    "prebuild": "tailwindcss -i ./src/shared/styles/globals.css -o ./src/shared/styles/output.css",
    "build": "rm -rf dist && pnpm compile && cp -R src/shared/styles dist/shared/styles && rm dist/shared/styles/globals.css && mv dist/shared/styles/output.css dist/shared/styles/globals.css",
    "postbuild": "rm ./src/shared/styles/output.css",
    "deploy-tgz": "rimraf *.tgz && cd dist && pnpm pack && cd ../ && mv dist/*.tgz ./",
    "deploy-pkg": "cd dist && npm publish --access public && cd ../",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "clean": "rm -rf dist",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.1.2",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^8.2.5",
    "eslint": "^8",
    "eslint-config-custom": "*",
    "eslint-config-next": "14.1.4",
    "glob": "^8.0.3",
    "gulp": "^4.0.2",
    "gulp-uglify": "^3.0.2",
    "jest": "^29.1.2",
    "postcss": "^8.4.49",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "3.4.17",
    "ts-jest": "^29.0.3",
    "typescript": "^5.7.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "next": "^15.1.3"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.0.0",
    "jose": "^5.9.6",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.469.0",
    "next-themes": "^0.4.4",
    "react-loading-skeleton": "^3.5.0",
    "sonner": "^1.7.2",
    "swr": "^2.3.0",
    "zod": "^3.24.1"
  }
}
